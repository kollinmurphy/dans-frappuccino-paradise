import { Account } from '@database'
import argon2 from 'argon2';

const user = await Account.findOne({
  where: {
    username: 'dan',
  }
})
if (await argon2.verify(user.password, 'password123')) {
  console.log('hooray')
} else {
  return Astro.redirect('/login')
}

